#include<stdio.h> 
#include<conio.h>
void main()
{
      int i,j;
      char p;
      clrscr();
      for(i=1;i<=4;i++)
      {
            p='a';
            for(j=1;j<=i;j++)
            {
             printf("%c",p)
             p++;
            }
            printf("\n");
      }
      for(i=3;i<=1;i--)
      {
             p='a';
             for(j=1;j<=i;j++)
             {
                  printf("%c",p);
                  p++;
             }
             printf("\n");
        }  
getch();
/*
